<div class="mb-20">
    <div class="inner-title">Ver√∂ffentlichung</div>
    <ul>
        {% for date in aggregations %}
            <li {% if date.active %}class="active"{% endif %}>
                {% if date.active %}
                    <a rel="nofollow" href="{{ url(app.request.attributes.get('_route'), {slug:app.request.attributes.get('slug')}) }}?{{ getFilterQueryWithExcludedAggregation('dr') }}" title="Filter entfernen">
                        <i class="fa fa-close"></i> {{ date.formattedName }}
                    </a>
                {% else %}
                    <a rel="nofollow" href="{{ url(app.request.attributes.get('_route'), {slug:app.request.attributes.get('slug')}) }}?{{ addAggregationToFilterQuery('dr',date.name) }}">{{ date.formattedName }}</a>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</div>
